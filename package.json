{
  "private": true,
  "scripts": {
    "build": "yarn wsrun build",
    "watch": "concurrently --kill-others  \"yarn wsrun watch\" \"yarn docker:run:dev\"",
    "docker:run:dev": "docker run --rm -p 3002:3000 -e \"GF_AUTH_ANONYMOUS_ENABLED=true\" -e \"GF_AUTH_ANONYMOUS_ORG_ROLE=Admin\" -e \"GF_PLUGINS_ALLOW_LOADING_UNSIGNED_PLUGINS=signalk-datasource,signalk-trackmap\" -v `pwd`/datasource/dist:/var/lib/grafana/plugins/sk-datasource -v `pwd`/trackmap/dist:/var/lib/grafana/plugins/trackmap  -v `pwd`/:/etc/grafana/provisioning/datasources -v `pwd`/dashboards:/etc/grafana/provisioning/dashboards grafana/grafana:9.4.7",
    "docker:build": "docker buildx build -t tkurki/signalk-grafana:dev --load .",
    "docker:run:image": "docker run --rm -p 3002:3000 -e \"GF_AUTH_ANONYMOUS_ENABLED=true\" -e \"GF_AUTH_ANONYMOUS_ORG_ROLE=Admin\" -v `pwd`/:/etc/grafana/provisioning/datasources -v `pwd`/dashboards:/etc/grafana/provisioning/dashboards tkurki/signalk-grafana:dev",
    "build-and-run": "yarn && yarn build && yarn docker:build && docker compose up"
  },
  "author": "teppo.kurki@iki.fi",
  "license": "Apache-2.0",
  "devDependencies": {
    "concurrently": "^5.0.2"
  },
  "dependencies": {
    "wsrun": "^5.2.0"
  }
}
